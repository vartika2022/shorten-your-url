<!DOCTYPE html>
<html>
    <head>
        <title>Url Shortener</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
                rel="stylesheet" 
                integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
                crossorigin="anonymous">

        <link rel="stylesheet" 
              href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" 
              integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" 
              crossorigin="anonymous"/>

    </head>
    <body>
        <div class="container">
            <center>
                <h1 style="margin-top: 2%;"> URL Shrinker</h1>
            </center>
            <form action = "/shortUrls" method = "POST" class = "my-4 form-inline">
                <label for = "fullUrl" class = "sr-only"> </label>
                <input type ="url" name = "fullUrl" id = "fullUrl" placeholder="URL" class = "form-control col mr-2" required>
                <button class = "btn btn-success my-4 form-inline" type= "submit"> Shrink </button>
            </form>

            <table class = "table table-striped table-responsive">
                <thead>
                    <tr>
                        <th> Full Url </th>
                        <th> Short Url </th>
                        <th> Clicks </th>
                        <th> Delete </th> 
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                            <td> <a href = "<%= shortUrl.full %>"> <%= shortUrl.full %> </a></td>
                            <td> <a href = "<%= shortUrl.short %>"> <%= shortUrl.short %> </a></td>
                            <td> <%= shortUrl.clicks %> </td>
                            <td> 
                                <a class="btn border-shadow delete" data-id=<%= shortUrl._id%> >
                                <span class="text-gradient">
                                    <i class="far fa-trash-alt"></i>
                                </span>
                                </a> 
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
                
    </div>
    </body>
</html>